    :javascript

      $(document).ready(function(evt){
        // Initialize Boostrap tooltips
        $('[data-toggle="tooltip"]').tooltip();
      
        // Bind navbar links to page scroll animation (including page title link)
        var $navbar = $("nav.navbar");
        
        $navbar.find("a").bind('click', function(evt) {
          var $anchor = $(this);
          
          if($anchor.attr("href").indexOf("#")!==0)
            return;   // Don't try to scroll to links that aren't bookmarks
          
          var offset;
          if($anchor.attr("href")==="#")
            offset=0;   // navigate to top of page
          else
            offset=Math.round($($anchor.attr('href')).offset().top);
            
          smooth_scroll_to(offset);
          
          $navbar.find("li.active").removeClass("active");
          
          // Don't make the element active if it's the navbar title
          if(!$anchor.hasClass("navbar-brand"))
            $anchor.parent().addClass("active");
            
          evt.preventDefault();
        });
      });